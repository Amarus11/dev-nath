    <!-- ‚ïê‚ïê‚ïê Version views ‚ïê‚ïê‚ïê -->
    <record id="knowledge_document_version_view_list" model="ir.ui.view">
        <field name="name">knowledge.document.version.list</field>
        <field name="model">knowledge.document.version</field>
        <field name="arch" type="xml">
            <list create="0">
                <field name="document_id"/>
                <field name="name"/>
                <field name="version_number"/>
                <field name="doc_type"/>
                <field name="author_id" widget="many2one_avatar_user"/>
                <field name="create_date"/>
                <button name="action_restore_version" type="object"
                    string="Restaurar" icon="fa-undo"
                    groups="syntropy_knowledge.group_knowledge_manager"/>
            </list>
        </field>
    </record>

    <record id="knowledge_document_version_view_form" model="ir.ui.view">
        <field name="name">knowledge.document.version.form</field>
        <field name="model">knowledge.document.version</field>
        <field name="arch" type="xml">
            <form string="Versi√≥n" create="0" edit="0">
                <sheet>
                    <group>
                        <group>
                            <field name="document_id"/>
                            <field name="name"/>
                            <field name="version_number"/>
                            <field name="doc_type"/>
                        </group>
                        <group>
                            <field name="author_id" widget="many2one_avatar_user"/>
                            <field name="create_date"/>
                        </group>
                    </group>
                    <separator string="Contenido"/>
                    <field name="content" readonly="1" invisible="doc_type == 'note'"/>
                    <field name="note_content" readonly="1" invisible="doc_type != 'note'"/>
                </sheet>
            </form>
        </field>
    </record>

