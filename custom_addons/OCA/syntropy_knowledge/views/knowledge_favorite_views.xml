<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ════════════════════════════════════════════════════════════
         FAVORITE VIEWS
         ════════════════════════════════════════════════════════════ -->

    <!-- List View -->
    <record id="knowledge_favorite_view_list" model="ir.ui.view">
        <field name="name">knowledge.favorite.list</field>
        <field name="model">knowledge.favorite</field>
        <field name="arch" type="xml">
            <list>
                <field name="document_id"/>
                <field name="user_id" widget="many2one_avatar_user"/>
                <field name="notes"/>
                <field name="create_date" string="Guardado el"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="knowledge_favorite_view_form" model="ir.ui.view">
        <field name="name">knowledge.favorite.form</field>
        <field name="model">knowledge.favorite</field>
        <field name="arch" type="xml">
            <form string="Favorito">
                <sheet>
                    <group>
                        <field name="document_id"/>
                        <field name="user_id" widget="many2one_avatar_user"/>
                    </group>
                    <field name="notes" placeholder="Notas personales sobre este documento..."/>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="knowledge_favorite_action" model="ir.actions.act_window">
        <field name="name">Mis Favoritos</field>
        <field name="res_model">knowledge.favorite</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[('user_id', '=', uid)]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No tienes documentos favoritos aún
            </p>
            <p>
                Marca documentos con ★ para acceder rápidamente a ellos.
            </p>
        </field>
    </record>

</odoo>
