<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- ════════════════════════════════════════════════════════════
         CATEGORY VIEWS
         ════════════════════════════════════════════════════════════ -->

    <!-- Tree View -->
    <record id="knowledge_category_view_list" model="ir.ui.view">
        <field name="name">knowledge.category.list</field>
        <field name="model">knowledge.category</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="icon"/>
                <field name="name"/>
                <field name="parent_id"/>
                <field name="article_count"/>
                <field name="company_id" groups="base.group_multi_company"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="knowledge_category_view_form" model="ir.ui.view">
        <field name="name">knowledge.category.form</field>
        <field name="model">knowledge.category</field>
        <field name="arch" type="xml">
            <form string="Categoría de Conocimiento">
                <sheet>
                    <widget
                        name="web_ribbon"
                        title="Archivado"
                        bg_color="bg-danger"
                        invisible="active"
                    />
                    <field name="active" invisible="1"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="icon" class="d-inline me-2" style="font-size: 1.5em;"/>
                            <field name="name" placeholder="Nombre de la categoría"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="parent_id"/>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                        <group>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="article_count"/>
                        </group>
                    </group>
                    <field name="description" placeholder="Descripción de la categoría..."/>
                    <notebook>
                        <page string="Subcategorías" name="subcategories">
                            <field name="child_ids">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="icon"/>
                                    <field name="name"/>
                                    <field name="article_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="Artículos" name="articles">
                            <field name="article_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="state" widget="badge"
                                        decoration-success="state == 'published'"
                                        decoration-warning="state == 'review'"
                                        decoration-info="state == 'draft'"
                                        decoration-muted="state == 'archived'"
                                    />
                                    <field name="author_id" widget="many2one_avatar_user"/>
                                    <field name="write_date"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Kanban View -->
    <record id="knowledge_category_view_kanban" model="ir.ui.view">
        <field name="name">knowledge.category.kanban</field>
        <field name="model">knowledge.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="icon"/>
                <field name="article_count"/>
                <field name="color"/>
                <templates>
                    <t t-name="card">
                        <div class="d-flex align-items-center gap-2 mb-1">
                            <span t-out="record.icon.value" style="font-size: 1.8em;"/>
                            <strong class="fs-5">
                                <field name="name"/>
                            </strong>
                        </div>
                        <div class="text-muted">
                            <field name="article_count"/> artículo(s)
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Search View -->
    <record id="knowledge_category_view_search" model="ir.ui.view">
        <field name="name">knowledge.category.search</field>
        <field name="model">knowledge.category</field>
        <field name="arch" type="xml">
            <search string="Buscar categorías">
                <field name="name"/>
                <field name="parent_id"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Archivados" name="archived" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Raíz" name="root" domain="[('parent_id', '=', False)]"/>
                <group expand="0" string="Agrupar por">
                    <filter string="Categoría padre" name="group_parent" context="{'group_by': 'parent_id'}"/>
                    <filter string="Compañía" name="group_company" context="{'group_by': 'company_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="knowledge_category_action" model="ir.actions.act_window">
        <field name="name">Categorías</field>
        <field name="res_model">knowledge.category</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="knowledge_category_view_search"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera categoría de conocimiento
            </p>
            <p>
                Las categorías te permiten organizar tus artículos de forma jerárquica.
            </p>
        </field>
    </record>

</odoo>
